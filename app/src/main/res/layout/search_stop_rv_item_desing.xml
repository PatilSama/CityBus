<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/back_theme"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:elevation="8dp"
        app:cardCornerRadius="3dp"
        android:layout_marginBottom="@dimen/margin_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_directions_bus_24"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30"></ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/searchStopItem"
                android:layout_weight="0.5"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/margin_14"
                android:paddingStart="@dimen/margin_10"
                android:text="Search Item"
                android:textStyle="bold"
                android:textColor="@color/back_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>