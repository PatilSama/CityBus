<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:id="@+id/mapBusAroundYou"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="match_parent">
    </androidx.fragment.app.FragmentContainerView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="@dimen/margin_3"
            android:layout_marginBottom="3dp"
            android:background="@android:color/white"
            app:cardCornerRadius="20dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/button_shape"
                android:src="@drawable/icon_bet_from_to"></ImageButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:background="@drawable/textdesing"
                    android:hint="From:"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/boxStrokeColor"
                    app:helperTextEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchFrom"
                        android:layout_width="match_parent"
                        android:paddingStart="@dimen/margin_5"
                        android:layout_height="@dimen/margin_50"
                        android:drawableLeft="@drawable/from_icon"
                        android:inputType="text">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:layout_marginBottom="@dimen/margin_18"
                    android:background="@drawable/textdesing"
                    android:hint="To:"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/boxStrokeColor"
                    app:helperTextEnabled="true"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchTo"
                        android:layout_width="match_parent"
                        android:paddingStart="@dimen/margin_5"
                        android:layout_height="@dimen/margin_50"
                        android:drawableLeft="@drawable/to_icon"
                        android:inputType="text">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

<!--                <Button-->
<!--                    android:id="@+id/btnSearchBuses"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_marginStart="@dimen/margin_35"-->
<!--                    android:layout_marginEnd="@dimen/margin_30"-->
<!--                    android:layout_marginBottom="@dimen/margin_20"-->
<!--                    android:text="Search Buses"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textStyle="bold"></Button>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</FrameLayout>