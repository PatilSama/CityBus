<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/main_back_desing"
            android:layout_weight="2.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
<!--    <ScrollView-->
<!--        android:layout_marginTop="80dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/textdesing"
                        android:hint="From:"
                        android:paddingStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/boxStrokeColor"
                        app:helperTextEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idEdtName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="6dp"
                            android:drawableLeft="@drawable/from_icon"
                            android:inputType="text">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/textdesing"
                        android:hint="To:"
                        android:paddingStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/boxStrokeColor"
                        app:helperTextEnabled="true"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtTo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="6dp"
                            android:drawableLeft="@drawable/to_icon"
                            android:inputType="text">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:id="@+id/btnSearchBuses"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic"
                        android:textAllCaps="false"
                        android:text="Search Buses"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="380dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/search_corner_desing"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Search Bus Number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/search_corner_desing"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Search Bus Stop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="450dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:textStyle="bold|italic"
            android:text="Nearest Bus Stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/seeAllColor"
            android:gravity="center"
            android:layout_weight="2"
            android:paddingStart="5dp"
            android:textStyle="bold|italic"
            android:text="See All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="480dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_directions_bus_24"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Route Name"
                android:textStyle="bold|italic"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">
        </androidx.recyclerview.widget.RecyclerView>
        <Button
            android:textStyle="bold|italic"
            android:textAllCaps="false"
            android:text="See All Buses"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/search_corner_desing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="17dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="730dp"
        android:layout_width="match_parent"
        android:textStyle="italic|bold"
        android:text="Buses Around You"
        android:layout_height="wrap_content"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="770dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"></androidx.cardview.widget.CardView>

    
