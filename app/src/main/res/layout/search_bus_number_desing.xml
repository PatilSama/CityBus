<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/back_theme"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/margin_2"
        app:cardCornerRadius="@dimen/margin_2"
        android:id="@+id/cardSearchBusNumberTpSelectBusMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:src="@drawable/ic_baseline_directions_bus_24"></ImageView>

            <TextView
                android:id="@+id/txtNameOfBus"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Name of bus"
                android:textColor="@color/back_theme"
                android:textSize="@dimen/textSize_17"
                android:textStyle="bold"></TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/txtBusNumber"
            android:layout_marginStart="@dimen/margin_60"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_14"
            android:text="Bus Number"

            android:textColor="@color/bus_no_text"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_marginTop="@dimen/margin_40"
            android:id="@+id/txtFromTo"
            android:layout_marginStart="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_14"
            android:text="From_To"
            android:textColor="@color/back_theme"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold"></TextView>


    </androidx.cardview.widget.CardView>

</LinearLayout>