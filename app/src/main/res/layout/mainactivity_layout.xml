<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:background="@drawable/main_back_desing"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"></LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/white"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="250dp"
                        android:layout_marginTop="58dp"
                        android:background="@drawable/button_shape_of_navigator"
                        android:src="@drawable/icon_bet_from_to_navigator"></ImageButton>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/textdesing"
                            android:hint="From:"
                            android:paddingStart="10dp"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/boxStrokeColor"
                            app:helperTextEnabled="true"
                            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/searchFrom"
                              android:inputType="none"
                                android:textIsSelectable="true"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_50"
                                android:drawableLeft="@drawable/from_icon"
                                android:drawablePadding="6dp">
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_30"
                            android:layout_marginTop="@dimen/margin_25"
                            android:layout_marginEnd="@dimen/margin_30"
                            android:layout_marginBottom="@dimen/margin_18"
                            android:background="@drawable/textdesing"
                            android:hint="To:"
                            android:paddingStart="10dp"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/boxStrokeColor"
                            app:helperTextEnabled="true"
                            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/SearchTo"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_50"
                                android:drawableLeft="@drawable/to_icon"
                                android:drawablePadding="6dp"
                                android:inputType="none"
                                android:textIsSelectable="true">
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                        <Button
                            android:id="@+id/btnSearchBuses"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_35"
                            android:layout_marginEnd="@dimen/margin_30"
                            android:layout_marginBottom="@dimen/margin_20"
                            android:text="Search"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textStyle="bold"></Button>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/searchBusNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_37"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_corner_desing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Search Bus Number"
                                android:textColor="@color/white"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/searchBusStop"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_37"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_corner_desing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Search Bus Stop"
                                android:textColor="@color/white"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:paddingStart="5dp"
                        android:text="Nearest Stop:"
                        android:textColor="@color/back_theme"
                        android:textSize="@dimen/margin_14"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/changeNearBusStop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:paddingStart="@dimen/margin_5"
                        android:text="Change"
                        android:textColor="@color/seeAllColor"
                        android:textSize="@dimen/margin_14"
                        android:textStyle="bold|italic"></TextView>
                    <TextView
                        android:id="@+id/showNearestStop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:paddingStart="@dimen/margin_5"
                        android:text="On Map"
                        android:textColor="@color/seeAllColor"
                        android:textSize="@dimen/margin_14"
                        android:textStyle="bold|italic"></TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/nearBusStopName"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="@color/Near_Stop_Text"
                    android:text="Mahesh Society"
                    android:layout_marginStart="@dimen/margin_75"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_30"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/bus_route_icon"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:text="Route Name"
                            android:textColor="@color/back_theme"
                            android:textSize="@dimen/margin_14"
                            android:textStyle="bold"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="140dp"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:text="Coming In"
                            android:textColor="@color/back_theme"
                            android:textSize="@dimen/margin_14"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcNearBusStop"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="5dp"></androidx.recyclerview.widget.RecyclerView>

                    <Button
                        android:id="@+id/btnSeeAllBuses"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="175dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_7"
                        android:background="@drawable/search_corner_desing"
                        android:text="All Buses"
                        android:textAllCaps="false"
                        android:textStyle="bold"></Button>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Buses Around You"
                    android:textColor="@color/back_theme"
                    android:textSize="@dimen/margin_14"
                    android:textStyle="bold"></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/busNearYou"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/textdesing"></androidx.fragment.app.FragmentContainerView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>